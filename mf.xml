<?xml version="1.0" encoding="utf-8"?>
<install version="2.5" type="plugin" group="jea">
	<name>JEA - Custom Fields</name>
	<author>Lars Urban</author>
	<creationDate>August 2012</creationDate>
	<copyright>Copyright (C) 2012 Lars Urban.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>webmaster@urbanswelt.de</authorEmail>
	<authorUrl>www.urbanswelt.de</authorUrl>
	<version>1.0</version>
	<description>More Custom Fields for JEA.</description>
	
	<scriptfile>script.php</scriptfile>
	
	<files>
		<filename plugin="mf">mf.php</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_jea_mf.ini</language>
		<language tag="de-DE">de-DE.plg_jea_mf.ini</language>
	</languages>
<config>
		<fields name="params">
		    <fieldset name="basic">
	            <field type="spacer" label="&lt;b&gt;Show Global field:&lt;/b&gt;" />
				<field name="language" type="list" default="1" label="language" description="language">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="slogan" type="list" default="1" label="slogan" description="slogan_id">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
	            <field type="spacer" label="&lt;b&gt;Show Custom field:&lt;/b&gt;" />
				<field name="field1" type="list" default="0" label="field1" description="mf_field1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="field2" type="list" default="0" label="field2" description="mf_field2">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>				
		    </fieldset>
	  </fields>
	</config>
	<!-- joomla 1.5 -->
    <params>
        <param type="spacer" default="&lt;b&gt;Global:&lt;/b&gt;" />
        <param name="field1" type="list" default="1" label="field1" description="mf_field1">
            <option value="0">Below Content</option>
            <option value="1">Above Content</option>
            <option value="2">Both</option>
        </param>       
    </params>   
    

</install>